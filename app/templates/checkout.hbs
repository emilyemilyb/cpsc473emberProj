<h1>{{headerMessage}}</h1>

<div class="jumbotron text-center">
  <h4>Checkout</h4>

  <br/><br/>

  <div class="form-horizontal form-group form-group-lg row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-7 col-sm-offset-2 col-md-6 col-md-offset-3">
      {{input type="name" value=name class="form-control" placeholder="Full Name" autofocus="autofocus"}}
    </div>
    <div class="col-xs-10 col-xs-offset-1 col-sm-7 col-sm-offset-2 col-md-6 col-md-offset-3">
      {{input type="email" value=emailAddress class="form-control" placeholder="Email Address" autofocus="autofocus"}}
    </div>
    <div class="col-xs-10 col-xs-offset-1 col-sm-7 col-sm-offset-2 col-md-6 col-md-offset-3">
      {{input type="address" value=address class="form-control" placeholder="Address" autofocus="autofocus"}}
    </div>

    <div class="col-xs-2 col-xs-offset-1 col-sm-2 col-sm-offset-2 col-md-2 col-md-offset-3">
      {{input type="city" value=city class="form-control" placeholder="City" autofocus="autofocus"}}
    </div>
    <div class="col-xs-2 col-xs-offset-1 col-sm-2 col-sm-offset-2 col-md-2 col-md-offset-0">
      {{input type="state" value=state class="form-control" placeholder="State" autofocus="autofocus"}}
    </div>
    <div class="col-xs-2 col-xs-offset-1 col-sm-2 col-sm-offset-2 col-md-2 col-md-offset-0">
      {{input type="zip" value=zip class="form-control" placeholder="Zip" autofocus="autofocus"}}
    </div>

    <label>
          <input type="checkbox" checked="checked" name="sameadr"> Shipping address same as billing
        </label>

    <div class="col-xs-10 col-xs-offset-1 col-sm-7 col-sm-offset-2 col-md-6 col-md-offset-3">
      {{input type="cardName" value=cName class="form-control" placeholder="Name on Card" autofocus="autofocus"}}
    </div>

    <div class="col-xs-2 col-xs-offset-1 col-sm-7 col-sm-offset-2 col-md-6 col-md-offset-3">
      {{input type="cardNum" value=cNum class="form-control" placeholder="Credit Card Number" autofocus="autofocus"}}
    </div>
    <div class="col-xs-2 col-xs-offset-1 col-sm-2 col-sm-offset-2 col-md-2 col-md-offset-3">
      {{input type="exp" value=exp class="form-control" placeholder="EXP" autofocus="autofocus"}}
    </div>
    <div class="col-xs-2 col-xs-offset-1 col-sm-2 col-sm-offset-2 col-md-2 col-md-offset-0">
      {{input type="cvv" value=cvv class="form-control" placeholder="CVV" autofocus="autofocus"}}
    </div>



  <div class="col-25">
    <div class="container">
      <h4>Cart
        <span class="price" style="color:black">
          <i class="fa fa-shopping-cart"></i>
          <b>4</b>
        </span>
      </h4>
      <p><a href="#">Iron Man</a> <span class="price">$15</span></p>
      <p><a href="#">Superman</a> <span class="price">$15</span></p>
      <p><a href="#">The Dark Knight</a> <span class="price">$8</span></p>
      <p><a href="#">The Avengers</a> <span class="price">$12</span></p>
      <hr>
      <p>Total <span class="price" style="color:black"><b>$50</b></span></p>
    </div>
  </div>

  <div class="col-xs-5 col-xs-offset-1 col-sm-offset-3 col-sm-4 col-md-3">
    <button class="btn btn-primary btn-lg btn-block" {{action 'saveInvitation'}} disabled= {{isDisabled}}>Finish Payment</button>
  </div>
</div>

  {{#if responseMessage}}
    <div class="alert alert-success">{{responseMessage}}</div>
  {{/if}}

  <br/><br/>


